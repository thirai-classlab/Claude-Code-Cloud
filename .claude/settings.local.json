      "Bash(for:*)",
      "Bash(do grep -l \"## Communication Protocol\" \"$file\")",
      "Bash(done)",
      "Bash(python3:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
